{
  "compilerOptions": {
    // to use export default in .d.ts files
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noEmit": true,
    "allowJs": true,
    "checkJs": false,
    "strict": false,
    "types": ["...", "mocha", "node"],
    "typeRoots": ["./node_modules/@types"],
    // Generate d.ts files
    "declaration": true,
    // Only output d.ts files
    "emitDeclarationOnly": false,
    "module": "ES2015",
    "target": "esnext",
    "lib": ["esnext"]
  },
  "include": ["esm/**/*", "test/**/*.ts"],
  "exclude": ["node_modules/", "**/*.spec.ts"]
}